{
  "manifest_version": 2,
  "name": "CiviOutlook Gmail Extension",
  "description": "Gmail Extension to communicate with Civi",
  "version": "1",
  "icons": {
    "128": "icon_128.png"
  },
  "permissions": [
    "identity",
    "https://cms46.loc/*",
    "http://cms46.loc/*"
  ],
  "externally_connectable": {
    "matches": ["https://mail.google.com/*"]
  },
  "web_accessible_resources": [
    "lib/jquery-1.11.3.min.js",
    "lib/gmail.js",
    "page.js"
  ],
  "background": { 
    "scripts" : ["lib/jquery-1.11.3.min.js", "background.js"]
  },
  "content_scripts":  [{
    "matches": [ "https://mail.google.com/*"],
    "js": [ "lib/jquery-1.11.3.min.js", "content.js"]
  }]
}
